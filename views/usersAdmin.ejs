<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %> 
<body>
    <%- include('./partials/header');%> 
    <main>
        <div class="banner">   
            <p >
                NUESTRAS <br>
                PASTAS
            </p>
        </div>

        <form class="d-flex flex-row-reverse">
            <input type="text" placeholder="Realiza tu búsqueda..." required>
            <button class="buttonp" type="button" type="submit"><i class="fa fa-search"></i></button>
        </form>

        <section class="cuerpoPromos">
            <% for (let i = 0; i < products.length; i++) {%> 
            
                <div class="caja">
                    <img class="fotosPedido" src="/images/products/<%= products[i].image %>" alt="<%= products[i].name %>">
                    <h4 class="titulos"><%= products[i].name %></h4>
                    <p>
                        <b><label for="">Descripción:</label></b><br>
                        <label for=""><%= products[i].description %></label><br>
                        <b><label for="">Rellenos disponibles:</b></label><br>
                        <% for (let x = 0; x < products[i].length; x++)  {%>                    
                            <ul>
                                <li><%= products[i].variety[x] %></li>
                            </ul>
                        <% } %> 
                        <b><label for="">Presentación:</label></b><br>
                        <label for=""><%= products[i].presentation %></label><br>
                        <label for=""><%= products[i].performance %></label><br><br>
                        <b><label for="">Precio:$<%= products[i].price %>,00</label></b><br><br>
                        <button class="botonAgregarPedido2">Agregar Pedido!</button>
                    </p>
                </div>
            <% } %> 

            <form class="cajaLogin" action="/" method="POST">
                <h3>
                    Editar un Usuario:
                </h3>
                <% for (let i = 0; i < products.length; i++) {%> 
                <div>
                    <img class="fotosPedido" src="/images/users/<%= users[i].image %>" alt="<%= users[i].name %>">
                    <h4 class="titulos"><%= users[i].name %></h4>

                    <input class="ingreso" type="text" name="fullName" id="fullName" placeholder="Nombre y Apellido">
    
                    <input class="ingreso" type="email" name="email" id="email" placeholder="E-mail">
    
                    <input class="ingreso" type="confirEmail" name="confirEmail" id="confirmEmail" placeholder="Confirmar E-mail">
    
                    <input class="ingreso" type="password" name="password" id="password" placeholder="Contraseña">
                    
                    <input class="ingreso" type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirmar Contraseña">
    
                    <input class="ingreso" type="calle" name="calle" id="calle" placeholder="Calle">
    
                    <input class="ingreso" type="numero" name="numero" id="numero" placeholder="Número">
    
                    <input class="ingreso" type="piso" name="piso" id="piso" placeholder="Piso">
    
                    <input class="ingreso" type="departamento" name="departamento" id="departamento" placeholder="Departamento">
    
                    <input class="ingreso" type="localidad" name="localidad" id="localidad" placeholder="Localidad">
    
                    <!-- <div class="captcha">
                        <img width="180px" src="/images/captcha.png" alt="imagen de captcha">
                    </div> -->
    
                    <p>
                        <button type="button" class="btn btn-success btn-lg btn-block" href="/users/edit">Editar</button>
                        <button type="button" class="btn btn-danger btn-lg btn-block" href="/users/destroy">Borrar</button>
                    </p>
                </div>
                <% } %>
            </form>
        </section>

        
      
    </main>
    <%- include('./partials/footer') %> 
</body>
</html>