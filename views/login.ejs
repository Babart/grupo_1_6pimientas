<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %> 
<body>
    <%- include('./partials/header');%> 
    <main>
        <div class="cajaLogin">
            <h1>Inicio de Sesión</h1>
            <form action="/users/login" method="POST">
            <p>
                <input class="ingreso" type="email" name="email" id="email" placeholder="E-mail" value="<%= locals.email && email %>">
                <p><%= locals.errors && errors.email ? errors.email.msg : '' %></p>
                
                <input class="ingreso" type="password" name="password" id="password" placeholder="Contraseña">
                <p><%= locals.errors && errors.password ? errors.password.msg : '' %></p>
            </p>
            <br>
            <div>
                <input type="checkbox" name="remember" id="remember">
                <label for="remember">Recordame</label>
            </div>
            <p>
                <button type="submit" class="ingreso" id="botonIngreso">Ingresar</button> 
            </p>
            </form>
        </div>
     </main>    
     <%- include('./partials/footer') %> 
</body>
</html>